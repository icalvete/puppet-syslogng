filter f_<%= @name -%> {facility(local3, local4, local5);};
destination d_<%= @name -%> {udp("<%= @remote_server -%>" port(514));};
log {source(s_src); filter(f_<%= @name -%>); destination(d_<%= @name -%>);};
<% if @logstash_remote_server and @logstash_remote_port -%>
destination d_<%= @name -%>_logstash {udp("<%= @logstash_remote_server -%>" port(<%= @logstash_remote_port -%>));};
log {source(s_src); filter(f_<%= @name -%>); destination(d_<%= @name -%>_logstash);};
<% end %>
